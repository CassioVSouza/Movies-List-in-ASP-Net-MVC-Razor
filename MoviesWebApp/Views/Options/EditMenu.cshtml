@model MovieModel

@{
    ViewData["Title"] = "Edit Movie";
}

<form asp-controller="Options" asp-action="EditFunction" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="exampleInputEmail1">Title</label>
        <input type="text" asp-for="Title" class="form-control" placeholder="Insert the title here">
        @Html.ValidationMessageFor(x => x.Title)
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Genre</label>
        <input type="text" asp-for="Genre" class="form-control" placeholder="Insert the genre here">
        @Html.ValidationMessageFor(x => x.Genre)
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Release Year</label>
        <input type="number" asp-for="ReleaseYear" class="form-control" placeholder="Insert the release year here">
        @Html.ValidationMessageFor(x => x.ReleaseYear)
    </div><br>
    <button type="submit" class="btn btn-primary">Edit</button>
    <button type="submit" class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back</button>
</form>