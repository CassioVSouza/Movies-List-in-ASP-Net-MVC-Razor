@model List<MovieModel>
@{
    ViewData["Title"] = "Home Page";
}

@if(TempData["MessageSucess"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["MessageSucess"]
    </div>
}

@if (TempData["MessageError"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MessageError"]
    </div>
}

<a type="button" class="btn btn-primary" asp-controller="Options" asp-action="AddMovieMenu">Add Movie</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Genre</th>
            <th scope="col">Release Year</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    @foreach(var movie in Model)
    {
        <tbody>
            <tr>
                <th scope="row">@movie.Id</th>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.ReleaseYear</td>
                <td><div class="btn-group">
                        <a role="button" class="btn btn-primary active" asp-route-id="@movie.Id" asp-controller="Options" asp-action="EditMenu">Edit</a>
                        <a role="button" class="btn btn-danger active" asp-route-id="@movie.Id" asp-controller="Options" asp-action="DeleteMenu">Delete</a>
                </div></td>
            </tr>
        </tbody>
    }
</table>
